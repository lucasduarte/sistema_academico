<%= form_for @student, :html => { :class => "form-horizontal student" } do |f| %>

  <% if @student.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :cpf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cpf, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cpf) %>
  </div>
  <div class="form-group">
    <%= f.label :birth_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :birth_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:birth_date) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :last_school, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :last_school, :class => 'form-control' %>
    </div>
    <%=f.error_span(:last_school) %>
  </div>
  <div class="form-group">
    <%= f.label :courses_of_interest, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :courses_of_interest, :class => 'form-control' %>
    </div>
    <%=f.error_span(:courses_of_interest) %>
  </div>
  <div class="form-group">
    <%= f.label :sex, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag :sex, options_for_select(Student.sexes.map {|k, v| [k.humanize.capitalize, v]}), class: 'form-control' %>
    </div>
    <%=f.error_span(:sex) %>
  </div>
  <div class="form-group">
    <%= f.label :telephone, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :telephone, :class => 'form-control' %>
    </div>
    <%=f.error_span(:telephone) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag :status, options_for_select(Student.statuses.map {|k, v| [k.humanize.capitalize, v]}), class: 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Cadastrar Aluno', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
